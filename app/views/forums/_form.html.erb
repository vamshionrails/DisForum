<div class="form">
	<%= form_for @forum do |f| -%>
		<%= f.error_messages %>
		
		<div class="field">
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
		<div class="field">
			<%= f.label :description %>
			<%= f.text_field :description %>
		</div>
		<div class="actions">
			<%= f.submit %>
		</div>
	<% end -%>
</div>