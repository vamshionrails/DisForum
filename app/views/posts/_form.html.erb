<div class="form">
	<%= form_for ([@forum, @post]) do |f| -%>
		<%= f.error_messages %>
		
		<div class="field">
			<%= f.label :title %>
			<%= f.text_field :title, :size => 50 %>
		</div>
		<div class="field">
			<%= f.label :content %>
			<%= f.text_area :content, :cols => 58, :rows => 10 %>
		</div>
		<div class="actions">
			<%= f.submit %>
		</div>
	<% end -%>
</div>